<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="info"
            type="com.ecommerce.albeliapp.common.api.model.ModuleInfo" />
    </data>

    <RelativeLayout
        android:id="@+id/routMainView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/size_20dp"
        android:paddingTop="@dimen/size_11dp"
        android:paddingEnd="@dimen/size_20dp"
        android:paddingBottom="@dimen/size_11dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@{info.name}"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_size_16sp" />


    </RelativeLayout>

</layout>