<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgClose"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"
            android:layout_gravity="end"
            android:layout_margin="@dimen/size_11dp"
            android:padding="@dimen/size_7dp"
            android:tint="@color/colorSecondaryText"
            app:srcCompat="@drawable/ic_close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/size_20dp"
            android:layout_marginEnd="@dimen/size_20dp"
            android:fontFamily="@string/font_family_regular"
            android:gravity="center"
            android:text="Login Required"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_size_16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/size_40dp"
            android:layout_marginTop="@dimen/size_14dp"
            android:layout_marginEnd="@dimen/size_40dp"
            android:fontFamily="@string/font_family_regular"
            android:gravity="center"
            android:text="You must login to buy products &amp; use other useful features of our app."
            android:textColor="@color/colorSecondaryLightText"
            android:textSize="@dimen/text_size_14sp" />

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_22dp"
            android:layout_marginBottom="@dimen/size_22dp"
            android:background="@drawable/bg_login"
            android:paddingStart="@dimen/size_24dp"
            android:paddingTop="@dimen/size_8dp"
            android:paddingEnd="@dimen/size_24dp"
            android:paddingBottom="@dimen/size_8dp"
            app:mrl_rippleColor="@color/colorRipple2"
            app:mrl_rippleDelayClick="true"
            app:mrl_rippleDuration="@string/ripple_duration"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

            <TextView
                android:id="@+id/txtLogin"
                style="@style/SmallFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@string/font_family_medium"
                android:gravity="center"
                android:text="@string/log_in"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_16sp" />
        </com.balysv.materialripple.MaterialRippleLayout>
    </LinearLayout>

</layout>
