<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="info"
            type="com.ecommerce.albeliapp.common.api.model.ModuleInfo" />
    </data>

    <RelativeLayout
        android:id="@+id/routMainView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/size_16dp"
        android:paddingTop="@dimen/size_9dp"
        android:paddingEnd="@dimen/size_16dp"
        android:paddingBottom="@dimen/size_9dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgFlag"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="@dimen/size_30dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/txtName"
            style="@style/SmallFontTextView"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/size_12dp"
            android:layout_toEndOf="@+id/imgFlag"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_size_17sp" />

    </RelativeLayout>

</layout>
